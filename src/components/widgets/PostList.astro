---
import FormattedDate from '@/components/widgets/FormattedDate.astro'
import TagBadge from '@/components/ui/TagBadge.astro'
import type { PostListProps } from '@/types'
import { themeConfig } from '@/config'

interface Props extends PostListProps {
  urlPrefix?: string
  showTags?: boolean
}

const { posts, urlPrefix = '', showTags = true } = Astro.props as Props
---

<ul>
  {
    posts.map((post) => (
      <li>
        <a href={urlPrefix ? `${urlPrefix}${post.id}/` : `/${post.id}/`} class="post-link">
          <div class={`post-item ${!themeConfig.date.dateOnRight ? 'date-left' : ''}`}>
            {!themeConfig.date.dateOnRight && (
              <p class="date font-features">
                <FormattedDate date={post.data.pubDate} context="list" />
              </p>
            )}
            <p class="title">{post.data.title}</p>
            {themeConfig.date.dateOnRight && (
              <div
                class={themeConfig.general.postListDottedDivider ? 'dotted-divider' : 'divider'}
              />
            )}
            {themeConfig.date.dateOnRight && (
              <p class="date font-features">
                <FormattedDate date={post.data.pubDate} context="list" />
              </p>
            )}
          </div>
        </a>
        {showTags && post.data.tags && post.data.tags.length > 0 && (
          <div class="tags-container" onclick="event.stopPropagation()">
            {post.data.tags.map((tag: string) => (
              <TagBadge tag={tag} />
            ))}
          </div>
        )}
      </li>
    ))
  }
</ul>
<div class="placeholder"></div>

<style>
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  li {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.75rem 0;
  }

  li:not(:last-child) {
    border-bottom: 1px solid var(--border);
  }

  .post-link {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    padding-left: 0;
  }

  @media (hover: hover) and (pointer: fine) {
    ul:hover .post-link {
      opacity: 0.4;
    }

    ul:hover .post-link:hover {
      opacity: 1;
    }

    ul:hover .post-link:hover .divider {
      background-color: var(--text-tertiary);
      opacity: 0.75;
    }
    ul:hover .post-link:hover .dotted-divider {
      color: var(--text-secondary);
    }
    ul:hover .post-link:hover .date {
      color: var(--text-secondary);
      opacity: 1;
    }
  }

  .post-item {
    min-height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
  }

  .post-item.date-left {
    justify-content: flex-start;
  }

  .post-item.date-left .title {
    flex: 1 1 auto;
    min-width: 0;
  }

  .post-item.date-left .date {
    margin-right: 0.75rem;
  }

  .title {
    margin: 0;
    flex-shrink: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .date {
    margin: 0;
    color: var(--text-secondary);
    opacity: 0.75;
    letter-spacing: var(--spacing-s);
    flex-shrink: 0;
    white-space: nowrap;
  }

  .divider {
    flex: 1 1 auto;
    min-width: 3rem;
    margin: 0 0.25rem;
    height: 0.5px;
    background-color: var(--border);
  }

  .dotted-divider {
    flex: 1 1 3rem;
    min-width: 3rem;
    max-width: 100%;
    text-align: end;
    letter-spacing: 5px;
    height: 1.675rem;
    overflow: hidden;
    color: var(--text-tertiary);
    opacity: 0.75;
  }

  .dotted-divider::after {
    content: '·····························································································································································';
    pointer-events: none;
  }

  .placeholder {
    height: 3rem;
  }
</style>
