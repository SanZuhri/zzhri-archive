---
import { themeConfig } from '@/config'
import CurrentDate from '@/components/ui/CurrentDate.astro'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'

interface Props {
  pageTitle?: string
}

const { pageTitle } = Astro.props
const displayTitle = pageTitle || themeConfig.site.title
---

<header>
  <nav>
    <div class="nav-left">
      <a href="/">{displayTitle}</a>
      <CurrentDate />
    </div>
    <ThemeToggle />
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  header a {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-decoration: none;
    min-width: 3rem;
    display: inline-block;
  }
</style>
