---
interface Props {
  tag: string
  clickable?: boolean
}

const { tag, clickable = true } = Astro.props
---

{clickable ? (
  <a href={`/tags/${tag}/`} class="tag-badge">
    {tag}
  </a>
) : (
  <span class="tag-badge">
    {tag}
  </span>
)}

<style>
  .tag-badge {
    display: inline-block;
    padding: 0;
    font-size: 0.75rem;
    font-family: var(--sans);
    font-weight: var(--font-weight-regular);
    letter-spacing: 0.01em;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.15s ease-out;
    white-space: nowrap;
    position: relative;
  }

  .tag-badge::before {
    content: '#';
    opacity: 0.5;
    margin-right: 0.125rem;
  }

  a.tag-badge:hover {
    color: var(--text-primary);
  }

  a.tag-badge::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 1px;
    background-color: var(--text-tertiary);
    opacity: 0;
    transition: opacity 0.15s ease-out;
  }

  a.tag-badge:hover::after {
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .tag-badge {
      font-size: 0.7rem;
    }
  }
</style>
