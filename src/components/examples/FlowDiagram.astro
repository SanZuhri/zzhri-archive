---
interface Step {
  number: number
  title: string
  description: string
}

interface Props {
  steps: Step[]
  title?: string
}

const { steps, title } = Astro.props
---

<div class="flow-diagram">
  {title && <h4 class="diagram-title">{title}</h4>}
  <div class="steps">
    {
      steps.map((step, index) => (
        <>
          <div class="step">
            <div class="step-number">{step.number}</div>
            <div class="step-content">
              <div class="step-title">{step.title}</div>
              <div class="step-description">{step.description}</div>
            </div>
          </div>
          {index < steps.length - 1 && (
            <div class="arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path
                  d="M12 5L12 19M12 19L19 12M12 19L5 12"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </div>
          )}
        </>
      ))
    }
  </div>
</div>

<style>
  .flow-diagram {
    margin: 2rem 0;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background-color: var(--bg-secondary);
    font-family: var(--sans);
  }

  .diagram-title {
    margin: 0 0 1.5rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    text-align: center;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .step {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background-color: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 4px;
  }

  .step-number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--text-primary);
    color: var(--bg-primary);
    border-radius: 50%;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    font-size: 0.875rem;
  }

  .step-description {
    color: var(--text-secondary);
    font-size: 0.8125rem;
    line-height: 1.5;
  }

  .arrow {
    display: flex;
    justify-content: center;
    padding: 0.5rem 0;
    color: var(--text-tertiary);
  }

  .arrow svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  @media (max-width: 640px) {
    .flow-diagram {
      padding: 1rem;
    }

    .step {
      padding: 0.75rem;
    }

    .step-number {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.8125rem;
    }
  }
</style>
