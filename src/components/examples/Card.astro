---
interface Props {
  title?: string
  subtitle?: string
  footer?: string
}

const { title, subtitle, footer } = Astro.props
---

<div class="card">
  {(title || subtitle) && (
    <div class="card-header">
      {title && <h3 class="card-title">{title}</h3>}
      {subtitle && <p class="card-subtitle">{subtitle}</p>}
    </div>
  )}
  <div class="card-body">
    <slot />
  </div>
  {footer && (
    <div class="card-footer">
      {footer}
    </div>
  )}
</div>

<style>
  .card {
    border: 1px solid var(--border);
    border-radius: 4px;
    margin: 1rem 0;
    overflow: hidden;
    font-family: var(--sans);
  }

  .card-header {
    padding: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .card-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .card-subtitle {
    margin: 0.25rem 0 0 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
    opacity: 0.75;
  }

  .card-body {
    padding: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .card-footer {
    padding: 0.75rem 1rem;
    border-top: 1px solid var(--border);
    font-size: 0.875rem;
    color: var(--text-secondary);
    opacity: 0.75;
  }
</style>
